<div class="container">

    <div class="menu-tab d-flex mt-5">
      <div class="menu-item">Category</div>
      <div class="menu-item">Price</div>
      <div class="menu-item">Size</div>
    </div>
      <div class="line"></div>



  <div class="d-flex">

  <%# CARD ART %>

    <div class="index-grid">
      <% @artworks.each do |artwork| %>
        <div class="card hover-card-effect" style="width: 18rem;">
          <%= cl_image_tag artwork.photo.key, alt: artwork.description, class: "card-img-top", height: 200, crop: "scale" %>
          <div class="card-body d-flex flex-column justify-content-center">
            <h2 class="card-title"><%= artwork.title %></h2>
            <p><%= artwork.description %></p>
            <p><%= artwork.price %>$</p>
            <p>
              <%= link_to '<i class="fa-regular fa-eye" style="color: #ffffff;"></i>'.html_safe, artwork_path(artwork), id: "view-btn-abs" %>
            </p>
          </div>
        </div>
      <% end %>
    </div>

    <div class="index-map-design"
      data-controller="index-map"
      data-index-map-markers-value="<%= @markers.to_json %>"
      data-index-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
</div>
