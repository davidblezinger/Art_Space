<nav class="navbar">

  <div class="navbar-left">
    <%= link_to '<i class="fa-solid fa-house" style="color: #000000;"></i>'.html_safe, root_path, class: "login-button" %>
  </div>
  <div class="navbar-text">
    <h3 id="nav-text">Art Space</h3>
  </div>
  <div class="navbar-right">
    <% if user_signed_in? %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>

      <!-- User Avatar Dropdown -->
      <div class="dropdown">
        <%= link_to "+", new_artwork_path, class: "link_btns", id: "create-art-btn-index" %>
        <% if current_user.photo.key %>
          <%= cl_image_tag(current_user.photo.key, width: 40, height: 40, crop: :fill, gravity: :auto, class: "avatar") %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarAvatarDropdown">

        <% if current_user %>
          <%= link_to "#{current_user.first_name}'s Profile", user_path(current_user), class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
        <% end %>
        </div>
      </div>
      <% else %>
        <%= link_to "Log In", new_user_session_path, class: "login-button" %>
      <% end %>
  </div>
</nav>
